{
  "name": "api",
  "version": "1.0.0",
  "main": "dist/shared/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd -r dotenv/config -r tsconfig-paths/register --ignore-watch node_modules --ignore src/__tests__ --respawn src/shared/index.ts",
    "prebuild": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "build": "tsc && tsc-alias",
    "start": "node dist/shared/index.js",
    "migration:generate": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -n",
    "migration:create": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create -n",
    "migration:run": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "migration:show": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:show",
    "migration:rollback": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert",
    "migration:drop-create": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop && tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "migration:drop": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop",
    "pretest": "tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop -c test && tsnd -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -c test",
    "test": "set SECRET=123 && jest --runInBand"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/md5": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.1",
    "tsc-alias": "^1.3.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "md5": "^2.3.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^1.1.6",
    "typeorm": "^0.2.32"
  }
}
