{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended" // Último Extends
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier" // Último plugin
  ],
  "rules": {
    "camelcase": "off",
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"],
    "prettier/prettier": "warn",

    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ],

    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "prefix": ["I"],
        "format": ["PascalCase"]
      }
    ],

    "class-methods-use-this": ["error", { "exceptMethods": ["up", "down"] }],

    "no-unused-expressions": ["error", { "allowTernary": true }]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
